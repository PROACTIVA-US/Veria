# Minimal perms for runtime SA (write logs)
resource "google_project_iam_member" "run_runtime_logs" {
  project = "veria-dev"
  role    = "roles/logging.logWriter"
  member  = "serviceAccount:${google_service_account.run_runtime.email}"
}

