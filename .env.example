
# Veria Platform Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development
LOG_LEVEL=info

# Service Ports
GATEWAY_PORT=3001
IDENTITY_PORT=3002
POLICY_PORT=3003
COMPLIANCE_PORT=3004
AUDIT_PORT=3005

# Database Configuration
DATABASE_URL=postgresql://veria:veria123@localhost:5432/veria
DB_HOST=localhost
DB_PORT=5432
DB_NAME=veria
DB_USER=veria
DB_PASSWORD=veria123
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_EXPIRES_IN=86400

# Blockchain Configuration
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
BLOCKCHAIN_CHAIN_ID=80001
BLOCKCHAIN_PRIVATE_KEY=your-private-key-never-commit-this

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3000

# Security
BCRYPT_ROUNDS=10
API_KEY=changeme

# Feature Flags
FEATURE_WEBAUTHN=true
FEATURE_MFA=true
FEATURE_BLOCKCHAIN=false
FEATURE_AI_COMPLIANCE=false
