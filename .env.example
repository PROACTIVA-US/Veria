# Veria Development Environment Variables

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/veria_dev

# Authentication
JWT_SECRET=dev-secret-change-in-production
JWT_EXPIRY=7d

# Node Environment
NODE_ENV=development

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000

# Service Ports
GATEWAY_PORT=4000
IDENTITY_SERVICE_PORT=4001
COMPLIANCE_SERVICE_PORT=4002
AUDIT_SERVICE_PORT=4003
KYC_SERVICE_PORT=4004
BLOCKCHAIN_SERVICE_PORT=4005

# External APIs (optional for development)
# KYC_PROVIDER_API_KEY=
# BLOCKCHAIN_RPC_URL=
# STRIPE_SECRET_KEY=

# Logging
LOG_LEVEL=debug

# Feature Flags
FEATURE_INVESTOR_PORTAL=false

# Policy Configuration
POLICY_PATH=policy/policy.example.json
