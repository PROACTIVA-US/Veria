generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("GRAPH_DB_URL")
}

model Node {
  id        String   @id @default(cuid())
  orgId     String   
  type      String   
  label     String
  status    String?
  priority  Int?
  tags      String[]
  props     Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orgId])
  @@index([type])
}

model Edge {
  id        String   @id @default(cuid())
  orgId     String   
  srcId     String   
  dstId     String   
  kind      String   
  props     Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orgId])
  @@index([srcId])
  @@index([dstId])
  @@index([kind])
}

model Milestone {
  id        String   @id @default(cuid())
  orgId     String   
  title     String
  ts        DateTime 
  status    String
  props     Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orgId])
  @@index([ts])
}